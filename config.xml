<?xml version='1.0' encoding='utf-8'?>
<widget id="com.linxiaozhou.lonelyislandnotepure" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>孤岛笔记</name>
    <description>
        A note app Built by Cordova and jQuery
    </description>
    <author href="https://www.linxiaozhou.com">
        linxiaozhou
    </author>
    <icon src="res/logo.png" platform="browser" width="57" height="57" density="mdpi" />
    <icon src="res/logo.png" platform="android" width="57" height="57" density="mdpi" />
    
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="StatusBarBackgroundColor" value="#222" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- PLATFORMS -->
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <activity android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
